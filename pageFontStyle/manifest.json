{
    "manifest_version": 2,
    "name": "Page Font Style",
    "version": "1.0",
    "description": "To alter the fonts of a page",
    "icons": {
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["https://developers.chrome.com/*"],
        "js": ["content.js", "jquery-3.5.1.min.js"]
    }],
    "permissions": [
        "tabs",
        "https://developers.chrome.com/*"
    ]

}